    <script>
        // --- UI/Aesthetic Functionality ---
        function togglePhase(id, iconId) {
            const content = document.getElementById(id);
            const icon = document.getElementById(iconId);

            if (!content || !icon) return;

            const isClosed = content.style.maxHeight === '0px' || content.style.maxHeight === '' || content.classList.contains('closed');

            if (isClosed) {
                // Open the phase
                content.classList.remove('closed');
                // Recalculate and set max height based on content
                content.style.maxHeight = content.scrollHeight + 50 + "px"; 
                icon.classList.add('rotate-icon');
                icon.textContent = "—";
            } else {
                // Close the phase
                content.style.maxHeight = "0";
                content.classList.add('closed');
                icon.classList.remove('rotate-icon');
                icon.textContent = "+";
            }
        }

        // --- Form Submission and Result Handling ---
        let currentStep = 1;
        const totalSteps = 4;

        function showStep(step) {
            document.querySelectorAll('.form-step').forEach(el => {
                if (parseInt(el.getAttribute('data-step')) === step) {
                    el.classList.add('active');
                } else {
                    el.classList.remove('active');
                }
            });
            currentStep = step;
            // Update progress bar/text here if needed
        }

        function validateStep(step) {
            const stepElement = document.querySelector(`.form-step[data-step="${step}"]`);
            if (!stepElement) return true; // Should not happen

            // Find all required inputs within the current step
            const requiredInputs = stepElement.querySelectorAll('[required]');
            let allValid = true;

            requiredInputs.forEach(input => {
                // Basic validation check
                if (!input.value.trim()) {
                    allValid = false;
                    // Optional: Highlight the invalid input
                    input.style.borderColor = 'red';
                } else {
                    input.style.borderColor = ''; // Reset border color
                }
            });

            if (!allValid) {
                showMessage('Please fill out all required fields in this section before proceeding.', true);
            }
            return allValid;
        }


        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('persona-form');
            const resultsDiv = document.getElementById('results');

            // Initialize the form to show Step 1
            showStep(1);

            // Add event listeners for Next/Previous buttons
            document.querySelectorAll('.step-control-btn').forEach(button => {
                button.addEventListener('click', (e) => {
                    const nextStep = e.target.getAttribute('data-next-step');
                    const prevStep = e.target.getAttribute('data-prev-step');

                    if (nextStep) {
                        if (validateStep(currentStep)) {
                            showStep(parseInt(nextStep));
                        }
                    } else if (prevStep) {
                        showStep(parseInt(prevStep));
                    }
                });
            });


            if (form) {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    // Final check to ensure we are on the last step (Step 4) and it's valid
                    if (!validateStep(4)) {
                        return;
                    }

                    const submitButton = form.querySelector('button[type="submit"]');
                    submitButton.textContent = 'Synthesizing Persona...';
                    submitButton.disabled = true;

                    const formData = new FormData(form);
                    const data = Object.fromEntries(formData.entries());

                    try {
                        const response = await fetch('/generate', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        });

                        const resultText = await response.text();

                        if (response.ok) {
                            // Success! Show the message in the new results div
                            resultsDiv.innerHTML = `
                                <h3 class="text-2xl font-bold text-emerald-800 mb-4 display-font">Persona Synthesis Complete!</h3>
                                <div class="text-sm text-slate-700 whitespace-pre-line">${resultText}</div>
                            `;
                            resultsDiv.classList.remove('hidden');
                            form.classList.add('hidden'); // Hide the form on success

                            // Scroll to the results
                            resultsDiv.scrollIntoView({ behavior: 'smooth' });

                        } else {
                            // Server error (like gate check failed or AI Synthesis error)
                            resultsDiv.classList.add('hidden');
                            showMessage(resultText, true);
                        }
                    } catch (error) {
                        console.error('Network or client error:', error);
                        showMessage('Network Error: Could not connect to the server.', true);
                    } finally {
                        submitButton.textContent = 'Submit Phase 1 & Generate SoulDeep Persona';
                        submitButton.disabled = false;
                    }
                });
            }
        });

        function showMessage(message, isError = false) {
            const box = document.getElementById('message-box');
            if (!box) return;
            box.textContent = message;
            box.classList.remove('hidden');
            box.classList.toggle('bg-red-600', isError);
            box.classList.toggle('bg-emerald-600', !isError);
            // Auto hide after 8 seconds
            setTimeout(() => box.classList.add('hidden'), 8000);
        }

    </script>
