        // --- Interactivity: Toggle Phase Content ---
        function togglePhase(id, iconId) {
            const content = document.getElementById(id);
            const icon = document.getElementById(iconId);

            if (content.style.maxHeight && content.style.maxHeight !== '0px') {
                content.style.maxHeight = '0px'; 
                content.classList.add('closed');
                icon.classList.remove('rotate-icon');
            } else {
                content.style.maxHeight = content.scrollHeight + 50 + "px";
                content.classList.remove('closed');
                icon.classList.add('rotate-icon');
                setTimeout(() => {
                    content.style.maxHeight = content.scrollHeight + 50 + "px";
                }, 500); 
            }
        }

        // --- Canvas Logic: Architectural Diagnostics ---
        const canvas = document.getElementById('protocolCanvas');
        const ctx = canvas.getContext('2d');
        const gridSize = 10; 
        const cellGap = 5;
        let animationFrameId;
        let time = 0;

        function resizeCanvas() {
            const container = canvas.parentElement;
            canvas.width = container.clientWidth;
            canvas.height = container.clientHeight;
        }

        function drawSystemStatus() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#0f172a';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            const cellWidth = (canvas.width - (gridSize + 1) * cellGap) / gridSize;
            const cellHeight = (canvas.height - (gridSize + 1) * cellGap) / gridSize;

            for (let i = 0; i < gridSize; i++) {
                for (let j = 0; j < gridSize; j++) {
                    const x = cellGap + i * (cellWidth + cellGap);
                    const y = cellGap + j * (cellHeight + cellGap);

                    const noise = Math.sin(time * 0.05 + i * 0.3 + j * 0.2) * 0.5 + 0.5;

                    let color;
                    if (noise > 0.8) {
                        color = `rgba(244, 63, 94, ${noise})`;
                    } else if (noise > 0.4) {
                        color = `rgba(99, 102, 241, ${noise})`;
                    } else {
                        color = `rgba(203, 213, 225, 0.2)`;
                    }

                    ctx.fillStyle = color;
                    ctx.fillRect(x, y, cellWidth, cellHeight);

                    if (noise > 0.8) {
                        ctx.strokeStyle = `rgba(244, 63, 94, 0.8)`;
                        ctx.lineWidth = 1;
                        ctx.strokeRect(x, y, cellWidth, cellHeight);
                    }
                }
            }

            time++;
            animationFrameId = requestAnimationFrame(drawSystemStatus);
        }

        function initCanvas() {
            resizeCanvas();
            drawSystemStatus();
            window.addEventListener('resize', resizeCanvas);
        }

        window.onload = initCanvas;
    </script>

